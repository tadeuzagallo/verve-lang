// RUN: %verve | %check

interface Intish<T> {
  let to_int : (T) -> Int
}

implementation Intish<Int> {
  fn to_int(x) { x }
}

fn bool_to_int(x: Bool) -> Int {
  if x { 1 } else { 0 }
}
implementation Intish<Bool> {
  let to_int = bool_to_int
}

to_int // CHECK-L: ∀(T: Intish). (T) -> Int
to_int(42) // CHECK: 42 : Int

fn g<U, T: Intish>(x: T) -> Int {
  to_int(x)
}

g(7) // CHECK-L: 7 : Int

fn f<T: Intish>(x: T) -> Int {
  g(x)
}

f(32) // CHECK: 32 : Int

