interface Num<T> {
  #assoc(left)
  operator (T) + (T) -> T

  #assoc(left) #prec(equal(+))
  operator (T) - (T) -> T

  #assoc(left) #prec(higher(+))
  operator (T) * (T) -> T

  #assoc(left) #prec(equal(*))
  operator (T) / (T) -> T
}

