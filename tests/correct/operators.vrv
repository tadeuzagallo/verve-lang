// Interfaces with operators by hand
interface Num'<T> {
  let plus : (T, T) -> T
}

implementation Num'<Int> {
  fn plus(x: Int, y: Int) -> Int {
    int_add(x, y)
  }
}

operator<T: Num'> (x: T) + (y: T) -> T {
  plus(x, y)
}

